<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:padding="@dimen/_4sdp"

    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/operation_type_img"
        android:layout_width="0dp"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintWidth_percent=".18"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:padding="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/operation_time_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/operation_amount_tv"
        android:layout_height="wrap_content"
        android:text="Today at 20.30Am"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/operation_type_img"
        app:layout_constraintTop_toTopOf="@id/operation_type_img"
        app:layout_constraintBottom_toBottomOf="@id/operation_type_img"
        />





    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/operation_amount_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000 EGP"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/Red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/operation_type_img" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/operation_type_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I gave"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/GrayBlue"
        app:layout_constraintBottom_toBottomOf="@id/operation_type_img"
        app:layout_constraintEnd_toEndOf="parent"
         />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GrayBlue"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation_type_tv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>