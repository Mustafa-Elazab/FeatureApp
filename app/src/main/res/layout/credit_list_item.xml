<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:padding="@dimen/_4sdp"

    >


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cst_first_letter_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".18"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:padding="@dimen/_16sdp"
        android:text="M"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cst_name_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/cst_first_letter_tv"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cst_time_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/GrayBlue"
        app:layout_constraintStart_toEndOf="@id/cst_first_letter_tv"
        app:layout_constraintTop_toBottomOf="@id/cst_name_tv" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cst_amount_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000 EGP"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/Red"
        app:layout_constraintBottom_toBottomOf="@id/cst_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cst_name_tv" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cst_type_tv"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I gave"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/GrayBlue"
        app:layout_constraintBottom_toBottomOf="@id/cst_time_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cst_time_tv" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GrayBlue"
         android:layout_marginTop="@dimen/_8sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cst_type_tv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>